{
  "name": "MikroTik Presence",
  "version": "v0.0.8",
  "slug": "mikrotik_presence",
  "description": "MikroTik RouterOS v7 device presence monitor",
  "url": "https://github.com/example/mikrotik-presence",
  "arch": ["aarch64", "amd64", "armv7"],
  "init": false,
  "startup": "application",
  "boot": "auto",
  "ingress": true,
  "ingress_port": 8080,
  "webui": "http://[HOST]:[PORT:8080]/",
  "discovery": [
    {
      "service": "mikrotik_presence",
      "config": {
        "host": "[HOST]",
        "port": 8080
      }
    }
  ],
  "panel_icon": "mdi:router-wireless",
  "panel_title": "MikroTik Presence",
  "options": {
    "router_host": "",
    "router_username": "",
    "router_password": "",
    "router_ssl": false,
    "router_verify_tls": false,
    "poll_interval_sec": 5
  },
  "schema": {
    "router_host": "str",
    "router_username": "str",
    "router_password": "password",
    "router_ssl": "bool",
    "router_verify_tls": "bool",
    "poll_interval_sec": "int(5,300)"
  },
  "ports": {
    "8080/tcp": 8080
  },
  "ports_description": {
    "8080/tcp": "HTTP API / Ingress web UI"
  }
}
